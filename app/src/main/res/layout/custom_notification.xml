<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F5F5F5"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearlayout"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.6"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:id="@+id/titleNotification"
            android:text="Ride Request"
            android:textStyle="bold"
            android:textSize="15dp"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:id="@+id/imageNotification"
            android:layout_height="55dp"
            android:background="@drawable/logo_driver"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="0dp"
        android:id="@+id/messageNotification"
        android:layout_below="@id/linearlayout"
        android:text="You can Accept or Reject this request to ride with Driver"
        android:textSize="12dp"
        android:textColor="#8D8787"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp"
        android:weightSum="4"
        android:layout_below="@id/messageNotification">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/acceptButton"
            android:background="@drawable/buttonlayout"
            android:layout_weight="1.7"
            android:text="ACCEPT" />

        <Button
            android:layout_width="0dp"
            android:layout_weight="1.7"
            android:id="@+id/rejectButton"
            android:layout_marginLeft="20dp"
            android:text="REJECT"
            android:background="@drawable/buttonlayout"
            android:layout_height="wrap_content" />

    </LinearLayout>



</RelativeLayout>