<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:background="@color/colorPrimary"
        android:layout_alignParentLeft="true" />

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:id="@+id/logo"
        android:src="@drawable/logo_driver" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv1"
        android:text="Currently accepting ride or not ?"
        android:layout_marginTop="40dp"
        android:textSize="22dp"
        android:layout_below="@id/logo"
        android:textStyle="bold"
        android:textColor="#91111111"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/tv1"
        android:layout_centerInParent="true"
        android:layout_marginTop="80dp"
        android:id="@+id/buttons"
        android:layout_marginLeft="50dp"
        android:weightSum="4">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/acceptButton"
            android:background="@drawable/buttonlayout"
            android:layout_weight="2"
            android:text="accepting ride request" />

        <Button
            android:layout_width="0dp"
            android:layout_weight="2"
            android:id="@+id/notacceptButton"
            android:layout_marginLeft="20dp"
            android:text="Not accepting ride request"
            android:background="@drawable/buttonlayout"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>